{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "include": [ "src/**/*" ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "strict": true,

    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build/game",

    "types": [
      "lua-types/jit",
      "@typescript-to-lua/language-extensions"
    ]
  },
  "tstl": {
    "luaTarget": "JIT",
    "noResolvePaths": ["dsp_c"],
    "sourceMapTraceback": true
  }
}
